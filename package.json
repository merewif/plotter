{
  "name": "plotter",
  "author": "Bálint Táborszki <taborszkib@gmail.com>",
  "description": "Writing tool for worldbuilding, character creation, and structuring your plot.",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "src/electron.js",
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@fortawesome/fontawesome-svg-core": "^1.3.0-beta3",
    "@fortawesome/free-regular-svg-icons": "^6.0.0-beta3",
    "@fortawesome/free-solid-svg-icons": "^6.0.0-beta3",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@mui/icons-material": "^5.3.1",
    "@mui/material": "^5.4.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "autosize": "^5.0.1",
    "cross-env": "^7.0.3",
    "electronmon": "^2.0.2",
    "jquery": "^3.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-google-charts": "^3.0.15",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "react-scripts": "^3.0.1",
    "react-transition-group": "^4.4.2",
    "react-youtube": "^7.14.0",
    "web-vitals": "^2.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "electron-start": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "electron-build": "electron-builder -w",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^17.1.2",
    "gh-pages": "^3.2.3",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "appId": "com.electron.plotter",
    "productName": "Plotter",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "deb"
    }
  }
}
